<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WSP.Search">
	<ContentPage.Content>
		<ListView  x:Name="lstView" RowHeight="120">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" BackgroundColor="Gray">
							<StackLayout Orientation="Vertical">
								<Label Text = "{Binding name}" FontSize="24" AbsoluteLayout.LayoutBounds="0.25, 0.25, 400, 40"/>
								<Label Text = "{Binding partnerid}" AbsoluteLayout.LayoutBounds="50, 35, 200, 25"/>
							</StackLayout>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>