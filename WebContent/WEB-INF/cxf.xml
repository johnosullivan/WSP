<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:jaxws="http://cxf.apache.org/jaxws"
      xmlns:jaxrs="http://cxf.apache.org/jaxrs"
      xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd
							http://cxf.apache.org/jaxws
 							http://cxf.apache.org/schemas/jaxws.xsd
 							http://cxf.apache.org/jaxrs
 							http://cxf.apache.org/schemas/jaxrs.xsd">
  <import resource="classpath:META-INF/cxf/cxf.xml" />
  <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
  	
  <bean id="jacksonProvider" class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider" />
      	
  <jaxrs:server name="CustomerService" address="http://localhost:8081">
		<jaxrs:serviceBeans>
			<ref bean="customerServiceRest" />
			<ref bean="partnerServiceRest" />
			<ref bean="productServiceRest" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jacksonProvider" />
		</jaxrs:providers> 

		<jaxrs:schemaLocations>
			<jaxrs:schemaLocation>com.ws.project.customer.service.representation.CustomerRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.ws.project.partner.service.representation.PartnerRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.ws.project.product.service.representation.ProductRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.ws.project.product.service.representation.SearchRepresentation</jaxrs:schemaLocation>
		</jaxrs:schemaLocations>

	</jaxrs:server>
  	<bean id="customerServiceRest" class="com.ws.project.customer.service.service.CustomerResource" />
  	<bean id="partnerServiceRest" class="com.ws.project.partner.service.service.PartnerResource" />
  	<bean id="productServiceRest" class="com.ws.project.product.service.service.ProductResource" />
  
</beans>